<div {{ attributes }} class="relative inline-block text-left">
    {% if message %}
        <div
            data-controller="auto-dismiss"
            data-auto-dismiss-timeout-value="3000"
            class="fixed inset-0 flex items-center justify-center z-50"
        >
            <div class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>
            <div class="relative bg-white rounded-xl shadow-2xl p-8 z-10 w-11/12 h-5/6 flex flex-col items-center justify-center text-center">
                <svg class="mx-auto mb-6 w-20 h-20 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 00-1.414 0L9
                     11.586 6.707 9.293a1 1 0 00-1.414
                     1.414l3 3a1 1 0 001.414 0l7-7a1
                     1 0 000-1.414z"/>
                </svg>
                <p class="text-gray-900 text-2xl font-semibold">{{ message }}</p>
            </div>
        </div>
    {% endif %}
    <button
        id="dropdownButton-{{ patientId }}"
        data-dropdown-toggle="dropdownMenu-{{ patientId }}"
        class="inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none"
        type="button"
    >
        Kies behandeling
        <svg class="-mr-1 ml-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none"
             viewBox="0 0 20 20" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l5 5 5-5"/>
        </svg>
    </button>

    <div
        id="dropdownMenu-{{ patientId }}"
        class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-48"
    >
        <ul class="py-2 text-sm text-gray-700">
            {% for type in this.availableTreatments %}
                <li>
                    <button
                        type="button"
                        class="block w-full text-left px-4 py-2 hover:bg-blue-50 hover:text-blue-700"
                        {{ live_action('treat', { treatment: type }) }}
                    >
                        {{ type.getLabel() }}
                    </button>
                </li>
            {% else %}
                <li>
                    <span class="block px-4 py-2 text-sm text-gray-400">Geen behandelingen</span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
