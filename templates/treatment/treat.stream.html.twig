<turbo-stream action="replace" target="patient-{{ patient.id }}">
    <template>
        {% include 'patient/_row.html.twig' with { patient: patient } %}
    </template>
</turbo-stream>

<turbo-stream action="append" target="flashes">
    <template>
        <div class="p-3 mb-2 rounded bg-blue-100 text-blue-800"
             data-controller="auto-dismiss"
             data-auto-dismiss-timeout-value="5000">
            {{ message }}
        </div>
    </template>
</turbo-stream>
