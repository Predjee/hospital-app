{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Ziekenhuisapp{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{ importmap('app') }}
</head>
<body class="bg-gray-50 text-gray-900 font-sans">
<header class="bg-blue-600 text-white p-4 shadow">
    <h1 class="text-xl font-bold">🏥 Ziekenhuisapp</h1>
    <p class="text-sm">Symfony 7.3 • PHP 8.4 • Doctrine 3.5 • LAST stack</p>
</header>

<main class="container mx-auto p-6">
    {% block body %}{% endblock %}
</main>

<footer class="bg-gray-100 text-center text-gray-500 p-4 mt-6 text-sm">
    © {{ "now"|date("Y") }} – Voor educatieve doeleinden.
</footer>
</body>
</html>
